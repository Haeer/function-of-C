#include <stdio.h>
int main()
{
  int number , count = 0;
  int i = 0;
  int num[6];//默认支持六位数
  char unit [10][4]={"零","壹","贰","叁","肆","伍","陆","柒","捌","玖"};
  printf("请输入小写数字:");
  scanf("%d",&num);
  //取出每个数字
  while(num>0)
  {
    num[i]=num%10;
    num/=10;
    i++;
    count++;
  }
  printf("用户输入的数字位数是%d:\n",count)
  for(i=0;i<count;i++)
  {
    printf("%d %s\n",num[i],unit[num[i]]);
  }
  return 0;
  
}
